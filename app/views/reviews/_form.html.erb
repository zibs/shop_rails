<h3 class = "text-lg-center">Add a review: </h3>
    <!-- DISPLAYS THE ERROR FOR REVIEWS -->
    <% if @review.errors.any? %>
      <div class="row">
        <div class="form-group-lg col-md-6 col-md-offset-3 alert alert-danger">
          <p>The form contains <strong><%= pluralize(@review.errors.count, "error") %></strong>.</p>
          <ul>
            <% @review.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <!-- CREATE NEW REVIEWS -->
<section class="row">
  <section class="form-group-lg col-md-6 col-md-offset-3">
<%# this remote true: is using $("form[data-remote='true']").on("submit", function(e) {e.preventDefault()}); Just preventing defualt submit action along with a data-remote true attribute %>
    <%= form_for [@product, @review], remote: true do |f|  %>
      <div class = "form-group">
        <%# f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class = "form-group">
          <%= f.submit "Create Review", class: "btn btn-primary-outline btn-block" %>
      </div>
    <% end %>
  </section>
</section>
